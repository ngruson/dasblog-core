@model PostViewModel
@{
    ViewData["Title"] = @Model.Title;
}

<div class="post">
    <div class="row post-title">
        <div class="col-md-12 mb-6">
            <h2 class="style3"><post-title-link post=@Model /> </h2>
            <small class="text-muted"><post-created-date post="@Model" date-time-format="MMMM dd, yyyy" /></small>
            <small class="text-muted"><post-comment-link post="@Model" link-text="Comments [{0}]" /></small>
            <small class="text-muted"><span class="blogMetaCategories">Posted in <post-categories-list post="@Model"> | </post-categories-list></span></small>
        </div>
    </div>

    <div class="row post-body">
        <div class="col-md-12 mb-6">
            <post-content post="@Model" />
        </div>        
    </div>
    <hr />
    <div class="row post-footer">
        <div class="col-md-12 mb-6">
            <ul class="style1 icons">
                <li>
                    <h5>Share on </h5>
                </li>
                <li>
                    <post-to-twitter post="@Model">
                        <i class="fab fa-twitter"></i>
                    </post-to-twitter>
                </li>
                <li>
                    <post-to-linked-in post="@Model">
                        <i class="fab fa-linkedin"></i>
                    </post-to-linked-in>
                </li>
                <li>
                    <post-to-facebook post="@Model">
                        <i class="fab fa-facebook"></i>
                    </post-to-facebook>
                </li>
                <li>
                    <post-to-reddit post="@Model">
                        <i class="fab fa-reddit"></i>
                    </post-to-reddit>
                </li>
            </ul>
        </div>
        <div dasblog-authorized class="col-md-12 mb-6">
            <post-edit-link post="@Model" />
            <span style="display:inline-block; width: 1em;"></span>
            <post-delete-link post="@Model" />
            <span style="display:inline-block; width: 1em;"></span>
            <comment-management-link post="@Model" />
        </div>
    </div>

    <partial name="_CommentBlockPartial" model="@Model.Comments" />

</div>

<hr />
